<div class="col-md-8">
	<p id="notice"><%= notice %></p>
		<div class="champSplash">
				<div class="champTitle"><%= @champion.name%></div>

				<div class="champPoints">
					<% attack_info = @infoHash["info"]["attack"].to_s + "0" %>
					<p>Attack</p>
					<div class="progress">
					  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="<%= attack_info%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= attack_info%>%">
					    <span class="sr-only">40% Complete (success)</span>
					  </div>
					</div>
					<% defense_info = @infoHash["info"]["defense"].to_s + "0" %>
					<p>Health</p>
					<div class="progress">
					  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%= defense_info%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= defense_info%>%">
					    <span class="sr-only">20% Complete</span>
					  </div>
					</div>
					<% magic_info = @infoHash["info"]["magic"].to_s + "0" %>
					<p>Spells</p>
					<div class="progress">
					  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%= magic_info%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= magic_info%>%">
					    <span class="sr-only">60% Complete (warning)</span>
					  </div>
					</div>
					<% dif_info = @infoHash["info"]["difficulty"].to_s + "0" %>
					<p>Difficulty</p>
					<div class="progress">
					  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="<%= dif_info%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= dif_info%>%">
					    <span class="sr-only">80% Complete (danger)</span>
					  </div>
					</div>
				</div>

				<%= image_tag(@splashArt, :class => "splashart") %>

		</div>




		<a class="btn btn-default drop-infos"  data-toggle="collapse" href="#abilities" aria-expanded="false" aria-controls="abilities">
			<b>Champion abilities</b> <span class="glyphicon glyphicon-chevron-down"></span>
		</a>

			<div class="collapse" id="abilities">
				<% @spellHash.each do |spell, infos|%>
						<div class="panel panel-default">
							<div class="panel-body">
								<div class="col-md-3">
									<%= image_tag(infos["image"]) %>
								</div>
								<div class="col-md-9">
									<p><b><%= infos["name"]%></b></p>
									<p><%= infos["description"]%></P><br>

									<p><b>Cooldown:</b> <%= infos["cooldown"]%></p>
									<% # Wenn es sich um nicht mana typen handelt wird dies so gehandelt%>
									<% unless infos["ressource"].blank?%>
										<p><b>Cost:</b> <%= infos["ressource"]%></p>
									<% else %>
										<p><b>Cost:</b> <%= infos["costBurn"]%> <%= infos["costType"]%></p>
									<% end %>
									<p><b>Range:</b> <%= infos["range"]%></p>
								</div>
							</div>
						</div>

				<% end %>
			</div>

		<a class="btn btn-default drop-infos"  data-toggle="collapse" href="#stats" aria-expanded="false" aria-controls="stats">
			<b>Champion stats</b> <span class="glyphicon glyphicon-chevron-down"></span>
		</a>

		<!-- stats={"armor"=>16.0, "armorperlevel"=>0.0, "attackdamage"=>47.696, "attackdamageperlevel"=>2.2,
		"attackrange"=>450.0, "attackspeedoffset"=>0.0, "attackspeedperlevel"=>3.5, "crit"=>0.0, "critperlevel"=>0.0, "hp"=>560.52,
		"hpperlevel"=>89.0, "hpregen"=>6.92, "hpregenperlevel"=>0.55, "movespeed"=>335.0, "mp"=>273.92, "mpperlevel"=>44.0, "mpregen"=>6.0,
		"mpregenperlevel"=>0.8, "spellblock"=>30.0, "spellblockperlevel"=>0.0}-->

		<div class="collapse" id="stats">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="col-md-12">
						<div class="col-md-4">
							<p> <b>Armor:</b> <%= @infoHash["stats"]["armor"]%> </p>
							<p> <b>Armorperlevel:</b> <%= @infoHash["stats"]["armorperlevel"]%> </p>
							<p> <b>Attackdamage:</b> <%= @infoHash["stats"]["attackdamage"]%> </p>
							<p> <b>Attackdamage per level:</b> <%= @infoHash["stats"]["attackdamageperlevel"]%> </p>
							<p> <b>Attackrange:</b> <%= @infoHash["stats"]["attackrange"]%> </p>
							<p> <b>Attackspeedoffset:</b> <%= @infoHash["stats"]["attackspeedoffset"]%> </p>
							<p> <b>Attackspeed per level:</b> <%= @infoHash["stats"]["attackspeedperlevel"]%> </p>
							<p> <b>Crit:</b> <%= @infoHash["stats"]["crit"]%> </p>
							<p> <b>Crit per level:</b> <%= @infoHash["stats"]["critperlevel"]%> </p>
							<p> <b>HP:</b> <%= @infoHash["stats"]["hp"]%> </p>
						</div>
						<div class="col-md-4">
							<p> <b>HP per level:</b> <%= @infoHash["stats"]["hpperlevel"]%> </p>
							<p> <b>HP regen:</b> <%= @infoHash["stats"]["hpregen"]%> </p>
							<p> <b>HP regen per level:</b> <%= @infoHash["stats"]["hpregenperlevel"]%> </p>
							<p> <b>Movespeed:</b> <%= @infoHash["stats"]["movespeed"]%> </p>
							<p> <b>MP:</b> <%= @infoHash["stats"]["mp"]%> </p>
							<p> <b>MP per level:</b> <%= @infoHash["stats"]["mpperlevel"]%> </p>
							<p> <b>MP regen:</b> <%= @infoHash["stats"]["mpregen"]%> </p>
							<p> <b>MP regen per level:</b> <%= @infoHash["stats"]["mpregenperlevel"]%> </p>
							<p> <b>Spellblock:</b> <%= @infoHash["stats"]["spellblock"]%> </p>
							<p> <b>Spellblock per level:</b> <%= @infoHash["stats"]["spellblockperlevel"]%> </p>
						</div>
					</div>
				</div>
			</div>
		</div>


			<div class="panel panel-default" style="margin-top: 10px;">
				<div class="panel-heading">Champion Counter/Synergie</div>
				<div class="panel-body">

				</div>
			</div>





</div>
<div class="col-md-4">
	<%= render 'counters/weakStrong' %><br>
	<%= render 'counters/addCounter' %><br>
</div>
