<!--Hier werden alle Champions links dargestellt wo man dann ausw채hlen kann -->
<div class="col-md-12">
<div class="col-md-4" id="row">
	<% @champions.each do |champion|%>
		<% lanearray = champion.lane.split('/') %>
		<% lanes = "" %>
		<% lanearray.each do |lane| %>
			<% lanes = lanes + " " + lane %>
		<% end %>
		<%= image_tag(champion.portraitChamps, :id => champion.id,:size => '40x40', :style => 'margin-bottom:3px; visibility:display;', :class => 'left ' + lanes)%>
	<% end %>
</div>
<div class="col-md-4">
	<!--Hier sind 5 verschiedene Buttons -->
	<div class="versusBtnField">
		<button class="btn-success btn-sm" id="mid">Mid</button>
		<button class="btn-success btn-sm" id="top">Top</button>
		<button class="btn-success btn-sm" id="adc">Adc</button>
		<button class="btn-success btn-sm" id="sup">Support</button>
	</div>
	<!--Hier ist das Linke Feld der Versus anzeige, welche alle Bilder der Champions als "display:none" beinhaltet -->
	<div class="versusField" id="vsFieldLeft">
		<% @champions.each do |champion|%>
			<div id="left" class="<%= champion.id %>", style="display:none;">
				<%= image_tag(champion.loadingChamps, :id => champion.id, :width => '100%', :height => '100%')%>
			</div>
		<% end %>
	</div>
	<!--Hier ist das Rechte Feld der Versus anzeige, welche alle Bilder der Champions als "display:none" beinhaltet -->
	<div class="versusField" id="vsFiedRight" >
		<% @champions.each do |champion|%>
			<div id="right" class="<%= champion.id %>"style="display:none;">
					<%= image_tag(champion.loadingChamps, :id => champion.id, :width => '100%', :height => '100%')%>
			</div>
		<% end %>
	</div>
	<!--Das linke Textfeld welches entweder YOU oder den ausgew채hlten champion beinhaltet -->
	<div class="vsTextField">
		<div id="you">
			<% @champions.each do |champion| %>
				<div id="<%= champion.id %>" style="display:none;"><%= champion.name %></div>
			<% end %>
			<div id="default">YOU</div>
		</div>
		<div id="vs">VS</div>
		<!--Das rechte Textfeld welches entweder OPPONENT oder den ausgew채hlten champion beinhaltet -->
		<div id="opponent">
			<% @champions.each do |champion| %>
				<div id="<%= champion.id %>" style="display:none;"><%= champion.name %> </div>
			<% end %>
			<div id="default">OPPONENT</div>
		</div>
	</div>
	<!-- -->
	<div class="vsBtnField">
		<%= link_to 'Go Matchup', "", class: "btn-warning btn-lg", style: "text-align: center;color:white;display:block;margin-left: 20%;margin-right:20%;margin-bottom: 10px;", id:"buttonGo" %>
		<%= link_to 'Create Matchup', "", class: "btn-warning btn", style: "text-align: center;color:white;display:block;margin-left: 30%;margin-right:30%;", id: "buttonCreate" %>


	</div>
</div>
<!--Hier werden alle Champions rechts dargestellt wo man dann ausw채hlen kann -->
<div class="col-md-4" id="row">
	<% @champions.each do |champion|%>
		<% lanearray = champion.lane.split('/') %>
		<% lanes = "" %>
			<% lanearray.each do |lane| %>
				<% lanes = lanes + " " + lane %>
			<% end %>
		<%= image_tag(champion.portraitChamps, :id => champion.id, :size => '40x40', :style => 'margin-bottom:3px; visibility:display;', :class => 'right '+ lanes)%>
	<% end %>
</div>
</div>
